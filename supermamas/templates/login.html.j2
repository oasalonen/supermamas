{% extends "base.html.j2" %}

{% import "forms.html.j2" as forms %}

{% block header %}
<h1>Login</h1>
{% endblock %}

{% block content %}
<form method="post">
    {{ forms.render_field(form.email) }}
    {{ forms.render_field(form.password) }}
    {{ forms.render_field(form.remember_me) }}
    {{ forms.submit(_("Log in")) }}
</form>

<fb:login-button 
  scope="public_profile,email"
  onlogin="checkLoginState();">
</fb:login-button>
{% endblock %}