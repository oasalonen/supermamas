{% extends "accounts/registration/profile.html.j2" %}

{% import "forms.html.j2" as forms %}
{% import "accounts/registration/fields.html.j2" as fields %}

{% block profile_header %}
<h1>{% trans %}Create a BubbleMama profile{% endtrans %}</h1>
{% endblock %}

{% block profile_fields %}
{{ fields.render_section(_("Account"), [
    form.email, 
    form.password, 
    form.verify_password]) }}

{{ fields.render_section(_("Contact details"), [
    form.first_name, 
    form.last_name, 
    form.phone_number]) }}

{{ fields.render_section(_("Address"), [
    form.address_line1, 
    form.address_line2, 
    form.postal_code,
    form.district]) }}

{{ fields.render_section(_("Information for planning your pampering"), [
    form.due_date, 
    form.pampering_start_date, 
    form.baby_name,
    form.baby_birth_date,
    form.pampering_days,
    form.max_pamperings_per_week,
    form.family_situation,
    form.food_allergies,
    form.diet_restrictions,
    form.languages,
    form.personal_message]) }}

{{ fields.render_section(_("Other"), [
    form.referrer]) }}

{{ fields.render_section(_("Terms acceptance"), [
    form.accept_contact_detail_sharing,
    form.accept_welcome_helping_mamas,
    form.accept_notify_helping_mamas,
    form.accept_thank_helping_mamas,
    form.accept_diversity,
    form.allow_helping_dads],
    description="<p>" ~ _("In order for your pampering to be successful, \
    and because the SuperMamas network is solely based on the goodwill of \
    others, we need to ask you to agree to the following conditions:") ~ "</p>") }}
{% endblock %}
